#!/bin/sh

upSeconds="$(/usr/bin/cut -d. -f1 /proc/uptime)"
secs=$((${upSeconds}%60))
mins=$((${upSeconds}/60%60))
hours=$((${upSeconds}/3600%24))
days=$((${upSeconds}/86400))
UPTIME=`printf "%dd %02dh %02dm %02ds" "$days" "$hours" "$mins" "$secs"`

# get the load averages
read one five fifteen rest < /proc/loadavg

echo "
\t\033[;1m`cat /etc/hostname` (`cat /etc/stage`)\033[0;0m
\t`lsb_release -s -d`
\t`uname -r`

\tUptime.........\t${UPTIME}
\tMemory.........\t`free -m | grep Mem | awk {'print $4'}`M / `free -m | grep Mem | awk {'print $2'}`M
\tSwap...........\t`free -m | grep Swap | awk {'print $4'}`M / `free -m | grep Swap | awk {'print $2'}`M
\tDisk...........\t`df -h / | awk '{ a = $3 } END { print a }'` / `df -h / | awk '{ a = $2 } END { print a }'`
\tLoad...........\t${one}, ${five}, ${fifteen}
\tProcesses......\t`ps ax | wc -l | tr -d " "`
\tIP Adresses....\t`ip a | grep glo | awk '{print $2}' | cut -f1 -d/ | sed ':a;N;$!ba;s/\n/\n\t\t\t/g'`
"
