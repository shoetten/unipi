#!/usr/bin/env python

import os
import random
import textwrap


hostname = "{{ ansible_hostname }}"
quoted = hostname.title()
filename_logo = "/etc/motd.logo"
filename_stage = "/etc/stage"
stage = False
if os.path.isfile(filename_stage):
    with open(filename_stage) as f:
        stage = f.read()


class text:
    red = "\033[1;31m"
    green = "\033[0;32m"
    yellow = "\033[1;33m"
    blue = "\033[1;34m"
    magenta = "\033[1;35m"
    cyan = "\033[1;36m"
    white = "\033[1;37m"
    bold = "\033[;1m"
    reverse = "\033[;7m"
    reset = "\033[0;0m"


# Logo

with open(filename_logo) as f:
    logo = f.read()
    logo = logo.replace(
        "X"*15,
        "".join([
            text.bold,
            hostname.upper().center(15),
            text.reset,
            text.yellow
        ])
    )
    if stage:
        logo = logo.replace(
            "Y"*15,
            "".join([
                (text.green if stage == "development" else text.red),
                stage.lower().center(15),
                text.reset,
                text.yellow
            ])
        )
    else:
        logo = logo.replace(
            "Y"*15,
            " "*15
        )
    output_logo = "".join([
        "\n"*3,
        text.yellow,
        logo,
        text.reset,
        "\n"
    ])


print("".join([
    output_logo
]))
